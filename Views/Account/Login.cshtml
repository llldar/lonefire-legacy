@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "登录";
}

<div class="container-lf">
    <div class="card card-w-40 border-left-info border-0 mx-auto my-5 shadow-lg">
        <div class="card-header border-0"><partial name="_DefaultCardHeader" /></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 d-none d-md-block">
                    <img class="img-fluid px-3 mt-4" src="/img/login-screen.svg" alt="">
                </div>
                <div class="col-md-5 mx-auto">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName">用户名</label>
                            <input asp-for="UserName" type="text" class="form-control" required="required" autofocus="autofocus">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">密码</label>
                            <input asp-for="Password" type="password" id="Password" class="form-control" required="required">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input type="checkbox" asp-for="RememberMe">
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <button class="btn btn-lf btn-block animated--shadow-deep" type="submit">登录</button>
                    </form>
                    <div class="row">
                        <a class="small mx-auto mt-3 mb-1 animated--link" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">注册</a>
                    </div>
                    <div class="row">
                        <a class="small mx-auto animated--link" asp-action="ForgotPassword">忘记密码?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
