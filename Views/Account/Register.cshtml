
@{
    ViewData["Title"] = "注册";
}
@model RegisterViewModel

@inject SignInManager<ApplicationUser> SignInManager

<div class="container-lf">
    <div class="card card-w-40 mx-auto border-0 my-5 shadow-lg">
        <div class="card-header border-0"><partial name="_DefaultCardHeader" /></div>
        <div class="card-body">
            <form form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName">用户名</label>
                    <input type="text" id="UserName" class="form-control" required="required" asp-for="UserName" autofocus="autofocus">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label asp-for="Password">密码</label>
                            <input type="password" id="Password" class="form-control" required="required" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword">确认密码</label>
                            <input type="password" id="ConfirmPassword" class="form-control" required="required" asp-for="ConfirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button class="btn btn-lf btn-block animated--shadow-deep" type="submit">注册</button>
            </form>
            <div class="row">
                <a class="small mx-auto mt-3 mb-1 animated--link" asp-action="Login">登录</a>
            </div>
            <div class="row">
                <a class="small mx-auto animated--link" asp-action="ForgotPassword">忘记密码?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
