@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "忘记密码";
}

<div class="container-lf">
    <div class="card card-w-20 border-left-info mx-auto border-0 my-5 shadow-lg">
        <div class="card-header border-0"><partial name="_DefaultCardHeader" /></div>
        <div class="card-body">
            <div class="text-center mb-4">
                <p>请输入您账号绑定的邮箱,一封密码重置邮件将会发送至您的邮箱</p>
            </div>
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email">邮箱</label>
                    <input type="email" asp-for="Email" id="Email" class="form-control" required="required" autofocus="autofocus">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button class="btn btn-lf btn-block animated--shadow-deep" type="submit">重置密码</button>
            </form>
            <div class="row">
                <a class="small mx-auto mt-3 mb-1 animated--link" asp-action="Register">注册</a>
            </div>
            <div class="row">
                <a class="small mx-auto animated--link" asp-action="Login">登录</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
