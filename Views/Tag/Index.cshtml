@{
    ViewData["Title"] = "标签云";
    ViewData["HeaderImg"] = "/img/bg-tag.jpg";
}

<div class="container-lf">
    <div class="col-md-9 mx-auto px-0">
        <div class="card mx-auto my-5 border-0 shadow-lg bg-w-op-9">
            <div class="card-header border-0"><partial name="_DefaultCardHeader" /></div>
            <div class="card-body" id="tag-card">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/lib/d3/d3.min.js"></script>
        <script src="~/lib/d3-cloud/build/d3.layout.cloud.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.9.2/d3.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/d3-cloud/1.2.5/d3.layout.cloud.min.js"></script>
    </environment>
    <script>var data = @Html.Raw(@ViewData["RawData"]);</script>
    <script src="~/js/WordCloud.js" asp-append-version="true"></script>
    <script src="~/js/Tag.js" asp-append-version="true"></script>
}