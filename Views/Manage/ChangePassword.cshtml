@model ChangePasswordViewModel
@{
    ViewData["Title"] = "修改密码";
}

<h4>@ViewData["Title"]</h4>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldPassword">旧密码</label>
        <input asp-for="OldPassword" class="form-control" autofocus="autofocus" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">新密码</label>
        <input asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">确认新密码</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button class="btn btn-lf btn-block animated--shadow-deep" type="submit">提交</button>

</form>
